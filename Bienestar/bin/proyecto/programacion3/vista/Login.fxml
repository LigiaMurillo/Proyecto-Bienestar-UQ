<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: aliceblue;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="proyecto.programacion3.controlador.LoginController">
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane layoutX="67.0" layoutY="237.0" prefHeight="100.0" prefWidth="366.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Usuario:" />
                  <Label text="Clave:" GridPane.rowIndex="1" />
                  <PasswordField fx:id="txtClave" promptText="Ingrese su clave" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="txtUsuario" promptText="Ingrese su usuario" GridPane.columnIndex="1" />
               </children>
            </GridPane>
            <Button fx:id="btnIngresar" layoutX="206.0" layoutY="368.0" mnemonicParsing="false" onAction="#ingresar" text="Ingresar" />
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="175.0" layoutY="80.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../img/Sample_User_Icon.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
